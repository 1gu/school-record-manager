<ol class="breadcrumb">
  <%= render_breadcrumbs tag: 'li', separator: '' %>
</ol>

<div class="page-header">
  <h1><%= test_title(@term) %></h1>
</div>

<table class="table table-hover">
  <thead>
    <h2>教科一覧</h2>
  </thead>

  <tbody>
    <tr>
      <th>教科名</th>
      <th>担当教員</th>
      <th>成績</th>
    </tr>

    <% @records.each do |record| %>
    <tr>
      <td><%= record.subject.name %></td>
      <td><%= record.subject.teacher_name %></td>
      <td><%= record.test_score %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '成績を更新する', registration_records_path(@term), class: 'btn btn-primary' %>
<%= link_to '戻る', records_path, class: 'btn btn-primary' %>

<div class="graph">
  <%= render partial: 'bar', locals: { klass: current_user.klass, records: @records, term: @term } %>
</div>

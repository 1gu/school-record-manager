<canvas id='<%= "bar#{term}" %>' class="graph"></canvas>

<%= javascript_tag do %>
  var barChartData = {
   labels : <%= raw klass.subjects.map { |subject| subject.name } %>,
   datasets : [
     {
       fillColor : "rgba(151,187,205,0.5)",
       strokeColor : "rgba(151,187,205,1)",
       data : <%= raw records.map{ |record| record.test_score } %>
     }
   ]
  }
  var bar_graph = new Chart(document.getElementById('<%= "bar#{term}" %>').getContext("2d")).Bar(barChartData);
  changeColor(bar_graph);
<% end %>

<div class="col-sm-8 col-sm-offset-2">
  <div class="well">
    <%= form_for [:admin, @school] do |f| %>
      <fieldset>
        <legend>学校の編集</legend>

        <% if @school.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

            <ul>
            <% @school.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label "学校名" %><br>
          <%= f.text_field :name , class: 'form-control', onclick:'this.select();' %>
        </div>
        <div class="form-group">
          <%= f.label "都道府県" %><br>
          <%= f.text_field :prefecture , class: 'form-control', onclick:'this.select();' %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-primary'%>
        </div>
      </fieldset>

    <% end %>
  </div>
  <%= link_to '確認', admin_school_path(@school) %> |
  <%= link_to '戻る', admin_schools_path %>
</div>

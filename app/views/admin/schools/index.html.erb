<h1>学校一覧</h1>

<table class="table table-borderd table-hover">
  <thead>
    <tr>
      <th>学校名</th>
      <th>都道府県</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.prefecture %></td>
        <td><%= link_to 'クラス一覧', admin_school_klasses_path(school) %></td>
        <td><%= link_to '編集', edit_admin_school_path(school) %></td>
        <td><%= link_to '削除', admin_school_path(school), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい学校の登録', new_admin_school_path, class: 'btn btn-primary' %>

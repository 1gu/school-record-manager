<p id="notice"><%= notice %></p>

<h1><%= @school.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school.klasses.each do |klass| %>
      <tr>
        <td><%= klass.name %></td>
        <td><%= klass.password %></td>
        <td><%= link_to 'Show', admin_school_klass_path(params[:school_id], klass) %></td>
        <td><%= link_to 'Edit', edit_admin_school_klass_path(params[:school_id], klass) %></td>
        <td><%= link_to 'Destroy', admin_school_klass_path(params[:school_id], klass), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Klass', new_admin_school_klass_path %>

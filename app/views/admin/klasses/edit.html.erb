<div class="col-sm-8 col-sm-offset-2">
  <div class="well">

    <%= form_for [:admin, @school, @klass] do |f| %>
      <fieldset>
        <legend>クラスの編集</legend>
        <% if @klass.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@klass.errors.count, "error") %> prohibited this admin_klass from being saved:</h2>

            <ul>
            <% @klass.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label "クラス名" %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード" %><br>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "登録", class: 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <%= link_to '確認', admin_school_klass_path(params[:school_id], @klass) %> |
  <%= link_to '戻る', admin_school_klasses_path %>
</div>
